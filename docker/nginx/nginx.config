server {
    listen: 80;
    server-name localhost;

    location / {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    # Proxy para o backend PHP (evita problemas no CORS)
    location /api {
        proxy_pass http://backend:80;
        proxy_set_header Host $host;
    }
}